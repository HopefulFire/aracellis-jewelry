<div class="posts">
	<% if @posts && @posts != [] %>
		<% @posts.each do |post| %>
			<a href=<%= "/posts/#{post.id}" %>>
				<h2><%= post.title %></h2>
				<h3><%= post.user.username %></h3>
				<p><%= post.body[0..100] %>...</p>
			</a>
		<% end %>
	<% else %>
		<h2>Nothing here!</h2>
	<% end %>
</div>